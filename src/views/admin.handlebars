<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Rol</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td>{{first_name}} {{last_name}}</td>
      <td>{{email}}</td>
      <td>{{role}}</td>
      <td>
        <form method="POST" action="/api/users/{{_id}}/role">
          <select name="role">
            <option value="user" {{#if (eq role "user")}}selected{{/if}}>User</option>
            <option value="premium" {{#if (eq role "premium")}}selected{{/if}}>Premium</option>
            <option value="admin" {{#if (eq role "admin")}}selected{{/if}}>Admin</option>
          </select>
          <button type="submit">Actualizar Rol</button>
        </form>
        <form method="POST" action="/api/users/{{_id}}/delete">
          <button type="submit">Eliminar</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
