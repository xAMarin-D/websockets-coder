<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/output.css" rel="stylesheet">
  <title>{{product.title}} - Product Details</title>
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">{{product.title}}</h1>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <p class="text-gray-700 mb-4">{{product.description}}</p>
      <p class="text-lg font-bold text-gray-900 mb-4">$ {{product.price}}</p>
      <p class="text-sm text-gray-600 mb-4">Stock: {{product.stock}}</p>
      <button id="add-to-cart" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">AÃ±adir al Carro</button>
    </div>
  </div>

  <script>
    document.getElementById('add-to-cart').addEventListener('click', () => {
      const productId = '{{product._id}}';
      fetch(`/carts/add-product/${productId}`, {
        method: 'POST'
      }).then(response => {
        if (response.ok) {
          alert('Product added to cart');
        } else {
          alert('Failed to add product to cart');
        }
      });
    });
  </script>
</body>
</html>
